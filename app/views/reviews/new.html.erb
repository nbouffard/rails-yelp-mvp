<div class="container">
  <h1>Create Review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  <hr>
  <%= link_to "Back", restaurant_path(@restaurant), class: "btn btn-primary" %>
</div>
